{
  "manifest_version": 3,
  "name": "Quick Notes",
  "version": "1.0",
  "description": "Take quick notes and save them with the current website URL.",
  "permissions": [
    "storage",
    "downloads",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
